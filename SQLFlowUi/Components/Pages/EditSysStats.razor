                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysStats].[StatsDate]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysStats].[StatsDate]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
