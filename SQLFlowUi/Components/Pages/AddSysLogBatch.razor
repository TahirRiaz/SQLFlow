@using SQLFlowUi.Controllers
@inject DocumentationService DocService
@page "/add-sys-log-batch"


 <PageTitle>Add SysLogBatch</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SysLogBatch</RadzenAlert>
        <RadzenTemplateForm TItem="SQLFlowUi.Models.sqlflowProd.SysLogBatch" Data="@sysLogBatch" Visible="@(sysLogBatch != null)" Submit="@FormSubmit">
        <RadzenStack>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[BatchID]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysLogBatch.BatchID" Name="BatchID" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[BatchID]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[BatchID]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[Batch]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenDropDownDataGrid AllowClear="true" TValue="int" ValueProperty="FlowID" Name="FlowID" ReadOnly="true" TextProperty="ProcessShort" Data="@flowDS" @bind-Value="@sysLogBatch.FlowID" AllowSorting="true" AllowPaging="true" AllowFiltering="true" AllowFilteringByWord="true" Style="width: 100%" AllowSelectAll="false" AllowFilteringByAllStringColumns="true">
                        <Columns>
                            <RadzenDropDownDataGridColumn Property="FlowID" Title="FlowID" Width="80px" />
                            <RadzenDropDownDataGridColumn Property="Batch" Title="Batch" Width="150px" />
                            <RadzenDropDownDataGridColumn Property="ProcessShort" Title="ProcessShort" />
                        </Columns>
                    </RadzenDropDownDataGrid>

                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[Batch]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[Batch]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[FlowType]").Result Variant="Variant.Outlined" Style="width: 49%">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysLogBatch.FlowType" Name="FlowType" ReadOnly="true" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[FlowType]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[FlowType]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[SysAlias]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysLogBatch.SysAlias" Name="SysAlias" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[SysAlias]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[SysAlias]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[Step]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenNumeric Style="width: 100%; height: 40px" ShowUpDown="false" @bind-Value="@sysLogBatch.Step" Name="Step" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[Step]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[Step]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[Sequence]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenNumeric Style="width: 100%; height: 40px" ShowUpDown="false" @bind-Value="@sysLogBatch.Sequence" Name="Sequence" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[Sequence]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[Sequence]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[Batch]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenNumeric Style="width: 100%; height: 40px" ShowUpDown="false" @bind-Value="@sysLogBatch.dbg" Name="dbg" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[Batch]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[Batch]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[Status]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysLogBatch.Status" Name="Status" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[Status]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[Status]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[BatchTime]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenDatePicker DateFormat="yyyy-MM-dd" style="display: block; width: 100%" @bind-Value="@sysLogBatch.BatchTime" Name="BatchTime" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[BatchTime]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[BatchTime]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[StartTime]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenDatePicker DateFormat="yyyy-MM-dd" style="display: block; width: 100%" @bind-Value="@sysLogBatch.StartTime" Name="StartTime" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[StartTime]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[StartTime]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysLogBatch].[EndTime]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenDatePicker DateFormat="yyyy-MM-dd" style="display: block; width: 100%" @bind-Value="@sysLogBatch.EndTime" Name="EndTime" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[EndTime]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[EndTime]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text=@DocService.GetLabel("[flw].[SysLogBatch].[SourceIsAzCont]").Result Component="SourceIsAzCont" Style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@sysLogBatch.SourceIsAzCont" Name="SourceIsAzCont" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysLogBatch].[SourceIsAzCont]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysLogBatch].[SourceIsAzCont]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" />
                </RadzenColumn>

            </RadzenRow>
        </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

@code {

    public async Task OpenSysDoc(string ObjectName)
    {
        var parameters = new Dictionary<string, object>
        {
            { "ObjectName", ObjectName }
        };

        await DialogService.OpenAsync<SysDocModal>($"Documentation {ObjectName}",
            parameters,
            new DialogOptions() { Width = "1200px", Height = "760px", Resizable = true, Draggable = true });
    }
}