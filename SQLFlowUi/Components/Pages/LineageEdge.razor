@using SQLFlowUi.Controllers
@inject DocumentationService DocService
@page "/lineage-edge"
@code {

    public async Task OpenSysDoc(string ObjectName)
    {
        var parameters = new Dictionary<string, object>
        {
            { "ObjectName", ObjectName }
        };

        await DialogService.OpenAsync<SysDocModal>($"Documentation {ObjectName}",
            parameters,
            new DialogOptions() { Width = "1200px", Height = "760px", Resizable = true, Draggable = true });
    }
}

 @attribute [Authorize]  
 <PageTitle>LineageEdge</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text=@DocService.GetLabel("[flw].[LineageEdge]").Result TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[LineageEdge]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[LineageEdge]"))" Variant="Variant.Flat" Icon="help_outline" Size="ButtonSize.Large" ButtonStyle="ButtonStyle.Light" />
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@lineageEdge"    TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="RecID" Title="Rec I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="DataSet" Title="Data Set">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="FlowID" Title="FlowID">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="FlowType" Title="FlowType">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="FromObjectMK" Title="FromObjectMK">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="ToObjectMK" Title="ToObjectMK">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="FromObject" Title="From Object">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="ToObject" Title="To Object">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="Dependency" Title="Dependency">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="IsAfterDependency" Title="Is After Dependency">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Property="CreateDate" Title="Create Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="SQLFlowUi.Models.sqlflowProd.LineageEdge" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="lineageEdge">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, lineageEdge)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
