@page "/add-sys-check-data-types"
@attribute [Authorize]

<PageTitle>Add SysCheckDataTypes</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SysCheckDataTypes</RadzenAlert>
        <RadzenTemplateForm TItem="SQLFlowUi.Models.sqlflowProd.SysCheckDataTypes" Data="@sysCheckDataTypes" Visible="@(sysCheckDataTypes != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Table Schema" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.TableSchema" Name="TableSchema" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Table Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.TableName" Name="TableName" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="TableName" Text="TableName is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Column Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.ColumnName" Name="ColumnName" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Ordinal" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.Ordinal" Name="Ordinal" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Data Type" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.DataType" Name="DataType" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Data Type Exp" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.DataTypeExp" Name="DataTypeExp" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="New Data Type Exp" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.NewDataTypeExp" Name="NewDataTypeExp" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="New Max Data Type Exp" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.NewMaxDataTypeExp" Name="NewMaxDataTypeExp" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Min Value" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.MinValue" Name="MinValue" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Max Value" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.MaxValue" Name="MaxValue" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Rand Value" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.RandValue" Name="RandValue" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Value Weight" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.ValueWeight" Name="ValueWeight" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Min Length" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.MinLength" Name="MinLength" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="MinLength" Text="MinLength is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Max Length" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.MaxLength" Name="MaxLength" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="MaxLength" Text="MaxLength is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Select Exp" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.SelectExp" Name="SelectExp" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Comma Count" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.CommaCount" Name="CommaCount" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Dot Count" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.DotCount" Name="DotCount" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Colon Count" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.ColonCount" Name="ColonCount" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Date" Component="IsDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@sysCheckDataTypes.IsDate" Name="IsDate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Date Time" Component="IsDateTime" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@sysCheckDataTypes.IsDateTime" Name="IsDateTime" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Time" Component="IsTime" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@sysCheckDataTypes.IsTime" Name="IsTime" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Date Local" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.DateLocal" Name="DateLocal" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Val As Date" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="yyyy-MM-dd" style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.ValAsDate" Name="ValAsDate" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is Numeric" Component="IsNumeric" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@sysCheckDataTypes.IsNumeric" Name="IsNumeric" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Is String" Component="IsString" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@sysCheckDataTypes.IsString" Name="IsString" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Decimal Points" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.DecimalPoints" Name="DecimalPoints" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="cmdSQL" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.cmdSQL" Name="cmdSQL" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="SQL Flow Exp" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.SQLFlowExp" Name="SQLFlowExp" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="MaxSQL Flow Exp" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysCheckDataTypes.MaxSQLFlowExp" Name="MaxSQLFlowExp" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

