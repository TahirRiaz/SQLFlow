                        </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[DataFactoryName]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[DataFactoryName]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                    </RadzenFormField>
                </RadzenRow>
                <RadzenRow Style="margin-bottom: 16px">
                    <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[AutomationAccountName]").Result Variant="Variant.Outlined" Style="width: 49%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.AutomationAccountName" Name="AutomationAccountName" />
