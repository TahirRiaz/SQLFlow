                        </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[StorageAccountName]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[StorageAccountName]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                    </RadzenFormField>
                </RadzenRow>
                <RadzenRow Style="margin-bottom: 16px">
                    <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[BlobContainer]").Result Variant="Variant.Outlined" Style="width: 49%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.BlobContainer" Name="BlobContainer" />
                        </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[BlobContainer]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[BlobContainer]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                    </RadzenFormField>
                    <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[KeyVaultName]").Result Variant="Variant.Outlined">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.KeyVaultName" Name="KeyVaultName" />
                        </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[KeyVaultName]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[KeyVaultName]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                    </RadzenFormField>
                </RadzenRow>
            </RadzenFieldset>
        </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

          
@code {

    public async Task OpenSysDoc(string ObjectName)
    {
        var parameters = new Dictionary<string, object>
        {
            { "ObjectName", ObjectName }
        };

        await DialogService.OpenAsync<SysDocModal>($"Documentation {ObjectName}",
            parameters,
            new DialogOptions() { Width = "1200px", Height = "760px", Resizable = true, Draggable = true });
    }
}