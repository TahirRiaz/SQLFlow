                    <RadzenRequiredValidator Component="ServicePrincipalAlias" Text="ServicePrincipalAlias is required" />
                </Helper>
            </RadzenFormField>
            <RadzenRow Style="margin-bottom: 16px">
                <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[TenantId]").Result Variant="Variant.Outlined" Style="width: 49%;">
                    <ChildContent>
                        <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.TenantId" Name="TenantId" />
                    </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[TenantId]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[TenantId]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                </RadzenFormField>
                <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[SubscriptionId]").Result Variant="Variant.Outlined" Style="width: 49%;">
                    <ChildContent>
                        <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.SubscriptionId" Name="SubscriptionId" />
                    </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[SubscriptionId]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[SubscriptionId]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                </RadzenFormField>
            </RadzenRow>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[ApplicationId]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.ApplicationId" Name="ApplicationId" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[ApplicationId]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[ApplicationId]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[ClientSecret]").Result Variant="Variant.Outlined">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.ClientSecret" Name="ClientSecret" />
                </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[ClientSecret]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[ClientSecret]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
            </RadzenFormField>
            <RadzenFieldset Text="Resource Group Details">
                <RadzenRow Style="margin-bottom: 16px">
                    <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[ResourceGroup]").Result Variant="Variant.Outlined" Style="width: 49%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysServicePrincipal.ResourceGroup" Name="ResourceGroup" />
                        </ChildContent><End><RadzenButton Click=@(args => @DocService.OpenSysDoc("[flw].[SysServicePrincipal].[ResourceGroup]")) MouseEnter="@(args => DocService.ShowTooltip(args,"[flw].[SysServicePrincipal].[ResourceGroup]"))" Icon="help_outline" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Dark" /></End>
                    </RadzenFormField>
                    <RadzenFormField Text=@DocService.GetLabel("[flw].[SysServicePrincipal].[DataFactoryName]").Result Variant="Variant.Outlined" Style="width: 49%;">
