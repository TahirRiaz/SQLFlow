@page "/edit-sys-log-file-event"
@attribute [Authorize]

<PageTitle>Edit SysLogFileEvent</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SysLogFileEvent</RadzenAlert>
        <RadzenTemplateForm TItem="SQLFlowUi.Models.sqlflowProd.SysLogFileEvent" Data="@sysLogFileEvent" Visible="@(sysLogFileEvent != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="FlowID" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@sysLogFileEvent.FlowID" Name="FlowID" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="File NameDW" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@sysLogFileEvent.FileName_DW" Name="FileName_DW" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Event DateDW" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="yyyy-MM-dd" style="display: block; width: 100%" @bind-Value="@sysLogFileEvent.EventDate_DW" Name="EventDate_DW" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

